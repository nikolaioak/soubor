{
  "name": "soubor",
  "version": "0.1.0",
  "description": "This application lets you rename files",
  "private": true,
  "devDependencies": {
    "electron": "^13.1.1",
    "electron-builder": "^22.10.5"
  },
  "dependencies": {
    "autoprefixer": "^10.3.1",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^4.3.5",
    "electron-updater": "^4.3.9",
    "glob": "^7.1.7",
    "postcss-cli": "^8.3.1",
    "tailwindcss": "^2.2.7"
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-css": "postcss renderer/resources/style.css -o renderer/resources/tw-style.css",
    "build-w": "electron-builder -w",
    "build-l": "electron-builder -l",
    "build-m": "electron-builder -m",
    "publish": "build -p always"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nikolaioak/soubor.git"
  },
  "keywords": [
    "electron",
    "file",
    "soubor"
  ],
  "author": {
    "name": "Nikolai Oakfield",
    "email": "nikolai.oak@gmail.com"
  },
  "license": "MIT",
  "build": {
    "appId": "com.dubskybrew.soubor",
    "copyright": "2021 Nikolai Oakfield",
    "publish": {
      "provider": "github",
      "owner": "nikolaioak",
      "repo": "soubor"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg",
      "icon": "build/app.icns",
      "darkModeSupport": true,
      "type": "development"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": "true",
      "perMachine": "false",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "icon": "build/app.png"
  }
}
